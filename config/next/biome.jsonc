{
  "$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["../core/biome.jsonc"],
  "linter": {
    "rules": {
      "nursery": {
        "noNextAsyncClientComponent": "error"
      },
      "performance": {
        "noImgElement": "error"
      },
      "style": {
        "noHeadElement": "error"
      },
      "suspicious": {
        "noDocumentImportInPage": "error",
        "noHeadImportInDocument": "error"
      }
    }
  },
  "overrides": [
    {
      "include": ["next.config.*"],
      "linter": {
        "rules": {
          "suspicious": {
            "useAwait": "off"
          }
        }
      }
    },
    {
      "include": ["**/page.{ts,tsx,js,jsx}", "**/layout.{ts,tsx,js,jsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "useAwait": "off"
          }
        }
      }
    }
  ]
}

{
  "name": "frontal-style-guide",
  "description": "Frontal's engineering style guide",
  "version": "0.0.3",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf -- node_modules .next .cache",
    "changeset": "bunx changeset",
    "release": "bunx changeset tag",
    "prepare": "husky"
  },
  "files": [
    "biome.jsonc",
    "README.md",
    "config"
  ],
  "exports": {
    "./biome/*": "./config/biome/*.jsonc",
    "./tsconfig/*": "./config/tsconfig/*.json",
    "./ruff/*": "./config/ruff/*.toml",
    "./golangci/*": "./config/golangci/*.yml",
    "./commitlint/*": "./config/commitlint/*.json",
    "./lint-staged/*": "./config/lint-staged/*.json",
    "./knip/*": "./config/knip/*.json",
    "./release/*": "./config/release/*.json",
    "./bump/*": "./config/bump/*.json",
    "./rust/*": "./config/rust/*",
    "./biome.json": "./biome.jsonc",
    "./core.json": "./config/biome/core.jsonc",
    "./next.json": "./config/biome/next.jsonc",
    "./react.json": "./config/biome/react.jsonc",
    "./astro.json": "./config/biome/astro.jsonc",
    "./remix.json": "./config/biome/remix.jsonc",
    "./solid.json": "./config/biome/solid.jsonc",
    "./svelte.json": "./config/biome/svelte.jsonc",
    "./vue.json": "./config/biome/vue.jsonc",
    "./python.toml": "./config/ruff/base.toml",
    "./go.yml": "./config/golangci/base.yml",
    "./rust.toml": "./config/rust/rustfmt.toml",
    "./commitlint.json": "./config/commitlint/base.json",
    "./lint-staged.json": "./config/lint-staged/base.json"
  },
  "keywords": [
    "style",
    "guide",
    "format",
    "linter"
  ],
  "dependencies": {
    "@biomejs/biome": "2.3.4"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}